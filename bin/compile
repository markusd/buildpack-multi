#!/usr/bin/env bash

set -e

unset GIT_DIR


if [[ -n "$SSH_GIT_RSA" ]]; then
  echo "$SSH_GIT_RSA" > ./ssh_git_rsa_id
  chmod 400 ./ssh_git_rsa_id
  echo 'ssh -vvv -i ./ssh_git_rsa_id -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no $*' > ssh_custom
  chmod +x ssh_custom
  echo "using custom ssh"
  CUSTOM_GIT_SSH="./ssh_custom"
fi

for BUILDPACK in $(cat $1/.buildpacks); do
  dir=$(mktemp -t buildpackXXXXX)
  rm -rf $dir

  url=${BUILDPACK%#*}
  branch=${BUILDPACK#*#}

  if [ "$branch" == "$url" ]; then
    branch=""
  fi

  if [ "$url" != "" ]; then
    echo "=====> Downloading Buildpack: $url"

    if [[ "$url" =~ \.tgz$ ]] || [[ "$url" =~ \.tgz\? ]]; then
      mkdir -p "$dir"
      curl -s "$url" | tar xvz -C "$dir" >/dev/null 2>&1
    elif [[ "$url" =~ \.zip$ ]]; then
      mkdir -p "$dir"
      TMPFILE=`mktemp -t buildpackXXXXX`
      echo "$TMPFILE $dir"
      curl -s "$url" > $TMPFILE 2>/dev/null
      echo "download complete"
      unzip $TMPFILE -d "$dir" 2>/dev/null
      echo "unzip complete"
      LS=`ls $dir`
      echo "$LS"
    else
      GIT_SSH="$CUSTOM_GIT_SSH" git clone $url $dir >/dev/null 2>&1
    fi
    cd $dir

    if [ "$branch" != "" ]; then
      git checkout $branch >/dev/null 2>&1
    fi

    # we'll get errors later if these are needed and don't exist
    chmod -f +x $dir/bin/{detect,compile,release} || true

    framework=$($dir/bin/detect $1)

    if [ $? == 0 ]; then
      echo "=====> Detected Framework: $framework"
      $dir/bin/compile $1 $2 $3

      if [ $? != 0 ]; then
        exit 1
      fi

      # check if the buildpack left behind an environment for subsequent ones
      if [ -e $dir/export ]; then
        source $dir/export
      fi

      if [ -x $dir/bin/release ]; then
        $dir/bin/release $1 > $1/last_pack_release.out
      fi
    else
      echo "Couldn't detect any framework for this buildpack. Exiting."
      exit 1
    fi
  fi
done

if [ -e $1/last_pack_release.out ]; then
  echo "Using release configuration from last framework ($framework)."
fi
